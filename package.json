{
  "name": "duplicate-image-finder",
  "version": "1.0.0",
  "description": "A powerful tool to find and manage duplicate images",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "setup": "node setup.js",
    "start": "node setup.js",
    "electron-dev": "electron .",
    "electron-build": "vite build && electron-packager . --out=dist --overwrite",
    "electron-start": "vite build && electron ."
  },
  "build": {
    "appId": "com.example.duplicateimagefinder",
    "productName": "Duplicate Image Finder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json",
      "README.md"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.23",
    "electron": "^28.0.0",
    "electron-packager": "^17.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vite": "^4.4.0"
  }
}
